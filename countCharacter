/*
objective is to count how many times a character shows in a string
*/

function countCharacter(str, char) {
    // your code here
    amnt = 0;
    for (i = 0; i < str.length; i ++) {
        if (str[i] == char) {
            amnt += 1;
        }
    }
    return amnt;
}

var output = countCharacter('I am a hacker', 'a');
console.log(output); // --> 3
